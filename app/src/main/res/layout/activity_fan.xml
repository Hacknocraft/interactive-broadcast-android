<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/event_image"
        android:layout_below="@+id/top_bar"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/subscriberHostView"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/event_name">

        <ProgressBar
            android:id="@+id/loadingSpinnerHost"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subscriberCelebrityView"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:keepScreenOn="true"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/subscriberHostView"
        android:foregroundGravity="center"
        android:layout_below="@+id/event_name">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/loadingSpinnerCelebrity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subscriberFanView"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:keepScreenOn="true"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/event_name">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/loadingSpinnerFan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publisherView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:keepScreenOn="true"
        android:layout_alignParentBottom="true"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/loadingSpinnerPublisher"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_button"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ico_chat"
        android:background="#000000"
        android:onClick="onChatButtonClicked"
        android:visibility="gone"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/top_bar"
        android:alpha="0.8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/unread_messages"
        android:background="@drawable/unread_messages"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/chat_button"
        android:layout_alignLeft="@+id/chat_button"
        android:layout_alignStart="@+id/chat_button"
        android:textSize="25dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/user_status"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/user_status_button"
        android:textSize="20sp"
        android:textColor="@color/user_status_text_color"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/top_bar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:padding="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/go_live_status"
        android:background="@drawable/user_status_button"
        android:textSize="30sp"
        android:textColor="@color/user_status_text_color"
        android:alpha="0.8"
        android:visibility="gone"
        android:text="@string/going_on_stage"
        android:textAlignment="center"
        android:singleLine="false"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:paddingTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_live_number"
        android:background="@drawable/user_status_button"
        android:textSize="60sp"
        android:textColor="@color/user_status_text_color"
        android:alpha="0.8"
        android:visibility="gone"
        android:text="3"
        android:textAlignment="center"
        android:singleLine="false"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/top_bar"
        android:id="@+id/chat_top_bar"
        android:visibility="gone"
        android:background="@drawable/top_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat with Producer"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textColor="#576873"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="25sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/close_chat"
            android:background="#E9E9E9"
            android:src="@drawable/ico_back_chat"
            android:layout_marginTop="2dp"
            android:onClick="onCloseChat" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#D7D6D4"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_above="@+id/messagebox"
        android:layout_below="@+id/chat_top_bar"
        android:alpha="0.9">

        <TextView
            android:id="@+id/messageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#D7D6D4"
            android:paddingBottom="8dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:textColor="#000000"
            android:visibility="visible" />
    </ScrollView>

    <RelativeLayout
        android:id="@+id/messagebox"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:background="#ffffff"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/imageButton" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageButton"
            android:src="@drawable/ico_send_msg"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#D5D5D5"
            android:onClick="onClickSend" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/top_bar_background_color"
        android:id="@+id/top_bar">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/get_inline"
            android:id="@+id/btn_getinline"
            android:onClick="onGetInLineClicked"
            android:visibility="visible"
            android:background="@drawable/get_in_line_button"
            android:textColor="@color/get_inline_text_color"
            android:textSize="15sp"
            android:typeface="normal"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/live_text"
            android:id="@+id/live_button"
            android:onClick="onGetInLineClicked"
            android:visibility="gone"
            android:background="@drawable/live_button"
            android:textColor="@color/live_color"
            android:textSize="15sp"
            android:typeface="normal"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/event_name"
            android:layout_below="@+id/loadingSpinnerCelebrity"
            android:textColor="@color/top_bar_text_color"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:background="@color/top_bar_background_color"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/event_status"
            android:textColor="@color/top_bar_text_color"
            android:textSize="13sp"
            android:background="@color/top_bar_background_color"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:typeface="normal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/event_name"
            android:layout_toEndOf="@+id/event_name"
            android:paddingBottom="15dp"
            android:paddingLeft="4dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/event_image_end"
        android:layout_below="@+id/top_bar"
        android:visibility="gone" />

</RelativeLayout>
