<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.tokbox.spotlight_sample.EventListActivity"
android:id="@+id/mainlayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#F5F5F5" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#F5F5F5"
    android:id="@+id/event_list_top_bar" >

    <TextView
        android:layout_width="170dp"
        android:layout_height="fill_parent"
        android:text="Spotlight Demo"
        android:id="@+id/event_list_title"
        android:textSize="20sp"
        android:textColor="#5F6062"
        android:background="#F5F5F5"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="15dp" />
</RelativeLayout>

<GridView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/gridView"
    android:layout_gravity="center"
    android:numColumns="3"
    android:layout_below="@+id/event_list_top_bar"
    android:background="#FFFFFF" />


</RelativeLayout>


